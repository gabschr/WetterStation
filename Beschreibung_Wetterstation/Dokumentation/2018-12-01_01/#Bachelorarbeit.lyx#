\begin_inset Caption Standard

\begin_layout Plain Layout
Programmablaufplan Interrupts
\begin_inset CommandInset label
LatexCommand label
name "fig:papInterrupts"

\end_inset


\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

